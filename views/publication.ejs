<!DOCTYPE html>
<html lang="en">

<head>
  <% include partials/head %>
  <title>Publications</title>
</head>

<body>
  <%include partials/menu %>
  <br>

  <div class="container">
    <form method="POST">
      <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="titlePublication" name="txttitle">

        <% if(error){ %>
          <%= error.title %>
        <% } %>
      </div>
      <div class="form-group">
        <label for="article">Article text</label>
        <textarea class="form-control" id="articleText" rows="6" name="txttextarea"></textarea>

        <% if(error) { %>
          <%=error.article  %>
        <% } %>
      </div>
      <div style="float: right">    
      <button type="submit" class="btn btn-success">Publicar</button>
      <button type="button" class="btn btn-danger" onclick="cancelArticle()">Cancelar</button>
      </div>
    </form>
  </div>

  <% include js/scripts %>

  <script>
  function cancelArticle(){
    location.href = "/";
  }
  </script>
</body>

</html>